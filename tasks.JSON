{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tasks Collection Schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "details": {
      "type": "string"
    },
    "completed": {
      "type": "boolean"
    },
    "user": {
      "type": "string",
      "description": "Doc Reference to the user"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["title", "completed", "user", "created"]
}
